#!/usr/bin/env bash

set -eo pipefail

reporters_opt=""

if [[ "$CIRCLECI" == "true" ]]
then
  git fetch origin master
  reporters_opt="-f github_status github_pr_review -c origin/master --exit-code"
fi

BUNDLE_GEMFILE=Gemfile.tools bin/bundle exec pronto run  -c origin/develop $reporters_opt --exit-code $@

