#!/usr/bin/env bash

set -e

# Before running this script, make sure that you define
# GITHUB_TOKEN, REPOSITORY_OWNER, REPOSITORY_TITLE
# in CircleCI Environment Variables

echo "-----Create and switch to new branch-----"

current_date=`date +"%Y%m%d%H%M"`
new_branch_name="auto-upgrade-tools-dependencies-${current_date}"
git checkout -b $new_branch_name

echo "-----Run Gemfile.tools update-----"

if bin/bundle.tools update; then
  echo 'Updated successfully'

  git config user.name "jt-tools-deployments"
  git config user.email "circleci.bot@example.com"

  git commit -am "Upgrades Gemfile.tools dependencies"
  git push https://$GITHUB_TOKEN@github.com/$REPOSITORY_OWNER/$REPOSITORY_TITLE.git -f

  curl -H "Authorization: token ${GITHUB_TOKEN}" -X POST -d \
    "{\"title\":\"Upgrade tools dependencies\",\"base\":\"master\", \"head\":\"${REPOSITORY_OWNER}:${new_branch_name}\"}" \
    https://api.github.com/repos/$REPOSITORY_OWNER/$REPOSITORY_TITLE/pulls
  exit 0
else
  echo 'Failed to update\n'
  exit 1
fi
